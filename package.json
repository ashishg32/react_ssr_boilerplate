{
  "name": "react_ssr_kit",
  "version": "1.0.0",
  "description": "React SSR bolierplate",
  "main": "index.js",
  "scripts": {
    "clean:client": "rimraf dist && mkdir -p dist",
    "clean:server": "rimraf server-dist && mkdir -p server-dist",
    "webpack:init": "npm-run-all clean:*",
    "webpack:client": "APP_ENV=development NODE_ENV=development webpack --config webpack.client.js --devtool inline-source-map --watch",
    "webpack:server": "APP_ENV=development NODE_ENV=development webpack --config webpack.server.js --devtool inline-source-map --watch",
    "webpack:start": "APP_ENV=development NODE_ENV=development DATA_SNIFFER=false nodemon --max-http-header-size=18000 --watch dist --watch server-dist --ext js server-dist/server.js",
    "dev": "NODE_ENV=development npm-run-all --parallel webpack:*"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.3.1",
    "path": "^0.12.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.1",
    "@babel/plugin-proposal-function-sent": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-throw-expressions": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "assets-webpack-plugin": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.18.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "file-loader": "^6.2.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "sass-loader": "^10.1.1",
    "url-loader": "^4.1.1",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "webpack-node-externals": "^2.5.2"
  }
}
